!!! 5
html
  head
    - if (isExternal) {
    title Please login to access #{internalUser}'s personal zone hub
    - } else {
    title PZH Login
    - }
    link(rel="stylesheet", type="text/css", href="/css/reset.css")
    link(rel="stylesheet", type="text/css", href="/css/structure.css")
    link(rel="stylesheet", type="text/css", href="/css/login.css")

    script(type="text/javascript", src="/js/view-login.js")

  body
    form.box.login
      header
        img(src="/images/webinosWithBorder.png", width="100px")
        - if (isExternal) {
        label Connect to #{internalUser}
        - } else if (isPzp) {
        label Request access to this zone: login
        - } else {
        label Personal Zone Hub login
        - }
        // <label>Please login to you personal zone hub using one of the following methods.</label>
        // TODO: "If you do not have an account, click..."
        // TODO: Fix stylesheet so that addition text can be added here if necessary
      fieldset.boxBody
        - if (auth.google.enabled) {
        label Login using your Google ID
        img(src='/images/login_google.png', width="100px")
        input(type="button", class="btnLogin", onclick="loginGoogle()", value="Login via Google")
        - }
        - if (auth.yahoo.enabled) {
        label Login using your Yahoo! ID
        img(src='/images/login_yahoo.png', width="100px")
        input(type="button", class="btnLogin", onclick="loginYahoo()", value="Login via Yahoo!")
        - }
        - if (auth.facebook.enabled) {
        label Login using your Facebook ID
        img(src='/images/login_facebook.png', height="45px")
        input(type="button", class="btnLogin", onclick="loginFacebook()", value="Login via Facebook")
        - }
        - if (auth.twitter.enabled) {
        label Login using your Twitter ID
        img(src='/images/login_twitter.png', height="45px")
        input(type="button", class="btnLogin", onclick="loginTwitter()", value="Login via Twitter")
        - }
        - if (auth.openid.enabled) {
        label Login using OpenID (please enter your identifier)
        img(src='/images/login_openid.png', width="100px")
        input(type="text", name="openid_identifier", id="openid_identifier")
        input(type="button", class="btnLogin", onclick="loginOpenID()", value="Login via OpenID")
        - }
    footer#main
      a(href="http://www.webinos.org") Powered by webinos
      |  |
      a(href="http://developer.webinos.org")  Developer resources on webinos
